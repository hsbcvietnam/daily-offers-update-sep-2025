    document.getElementById('red_bar').addEventListener('keydown', (e) => {
      if (e.code === "Enter") {
        let ele = document.getElementById('red_bar')
        if (ele.classList.contains('active')) {
          ele.classList.remove('active')
          document.getElementById('content').classList.add('display-none')
        } else {
          ele.classList.add('active')
          document.getElementById('content').classList.remove('display-none')
        }
      }
    })

    document.getElementById('red_bar').addEventListener('click', () => {
      let ele = document.getElementById('red_bar')
      if (ele.classList.contains('active')) {
        ele.classList.remove('active')
        document.getElementById('content').classList.add('display-none')
      } else {
        ele.classList.add('active')
        document.getElementById('content').classList.remove('display-none')
      }
    })
